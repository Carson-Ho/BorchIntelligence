<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_default">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="@dimen/x128"
        android:layout_height="@dimen/x25"

        android:layout_centerHorizontal="true"
        android:background="@color/layout_default"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/color_default"
        app:tabSelectedTextColor="@color/color_default"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance1"
        />

        <android.support.v4.view.ViewPager
        android:id="@+id/viewPager2"
            android:layout_below="@+id/tabLayout2"
        android:layout_width="200dp"
        android:layout_height="200dp"
    />



</RelativeLayout>