<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_default">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x43"
        android:background="@color/colorBackground"
        >


        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/x43"
            android:layout_height="@dimen/x43"
            android:background="@drawable/back_btn">

            <Button
                android:id="@+id/back"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/y13"
                android:background="@drawable/back"
                android:clickable="false"
                android:focusable="false"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/buyGuide"
            android:textSize="@dimen/x22"
            android:textColor="@color/color_default"/>



    </RelativeLayout>


    <ImageView
        android:id="@+id/process1"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="@dimen/y10"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/step3"/>


    <TextView
        android:id="@+id/title2"
        android:layout_below="@+id/process1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_centerHorizontal="true"
        android:text="@string/pleaseChosesothers"
        android:textSize="@dimen/x16"
        android:textColor="@color/colorTab_selected"/>



    <RelativeLayout
        android:id="@+id/line"
        android:layout_below="@+id/title2"
        android:layout_marginTop="@dimen/y10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorline"
        >
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/choese_area"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y31"
        android:focusable="true"
        android:background="@drawable/layout_style"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/area"
            android:textSize="@dimen/x14"
            android:textColor="@color/colorparameter1"/>

        <EditText
            android:id="@+id/editText_area"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x116"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pleaseFillin"
            android:phoneNumber="true"
            android:textSize="@dimen/x14"
            android:textColor="@color/colorparameter2"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/choese1"
        android:layout_below="@+id/choese_area"
        android:layout_marginTop="@dimen/y11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/Size1"
            android:layout_marginLeft="@dimen/x21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dingchuWay"
            android:textSize="@dimen/x14"
            android:textColor="@color/colorparameter1"/>


        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_marginLeft="@dimen/x21"
            android:layout_below="@+id/Size1"
            android:layout_marginTop="@dimen/y7"
            android:layout_width="@dimen/x185"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <RadioButton
                android:button="@null"
                android:id="@+id/radiobutton1"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y25"
                android:gravity="center"
                android:checked="true"
                android:text="@string/dingChu"
                android:textSize="@dimen/y10"
                android:textColor="@color/moduletextcolor_selector"
                android:background="@drawable/module_way"
                />



            <RadioButton
                android:id="@+id/radiobutton2"
                android:button="@null"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y25"
                android:layout_marginLeft="@dimen/x25"
                android:gravity="center"
                android:textSize="@dimen/y10"

                android:text="@string/laShen"
                android:textColor="@color/moduletextcolor_selector"
                android:background="@drawable/module_way"
                />

        </RadioGroup>

        <RelativeLayout
            android:id="@+id/line4"
            android:layout_below="@+id/radiogroup1"
            android:layout_marginTop="@dimen/y11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorline"
            >
        </RelativeLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/choese2"
        android:layout_below="@+id/choese1"
        android:layout_marginTop="@dimen/y11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/Size2"
            android:layout_marginLeft="@dimen/x21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模具定位环"
            android:textSize="@dimen/x14"
            android:textColor="@color/colorparameter1"/>


        <RadioGroup
            android:id="@+id/radiogroup2"
            android:layout_marginLeft="@dimen/x21"
            android:layout_below="@+id/Size2"
            android:layout_marginTop="@dimen/y7"
            android:layout_width="@dimen/x185"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <RadioButton
                android:button="@null"
                android:id="@+id/radiobutton3"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y25"
                android:gravity="center"
                android:text="@string/standard"
                android:checked="true"
                android:textSize="@dimen/y10"
                android:textColor="@color/moduletextcolor_selector"
                android:background="@drawable/module_way"
                />

            <RadioButton
                android:id="@+id/radiobutton4"
                android:button="@null"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y25"
                android:layout_marginLeft="@dimen/x25"
                android:gravity="center"
                android:textSize="@dimen/y10"
                android:text="@string/nonStandard"
                android:textColor="@color/moduletextcolor_selector"
                android:background="@drawable/module_way"
                />

        </RadioGroup>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="@dimen/x71"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/radiogroup2"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginTop="@dimen/y18"
            android:textSize="@dimen/y10"
            android:hint="@string/pleaseFillin"
            android:phoneNumber="true"
            />

        <TextView
            android:id="@+id/text_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/editText6"
            android:layout_alignBottom="@+id/editText6"
            android:text="mm"
            android:textColor="@color/colorparameter1"
            />

        <RelativeLayout
            android:id="@+id/line3"
            android:layout_below="@+id/radiogroup2"
            android:layout_marginTop="@dimen/y11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorline"
            >
        </RelativeLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/btn_next3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y12"
        android:layout_width="@dimen/x277"
        android:layout_height="@dimen/y25"
        android:text="@string/finish"
        android:textSize="@dimen/x14"
        android:textColor="@color/btn_next_selector"
        android:background="@drawable/next1_btn"/>
    </RelativeLayout>